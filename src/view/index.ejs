            }

            .hero-title {
                font-size: 2.5rem;
            }

            .hero-subtitle {
                font-size: 1.2rem;
            }

            .action-cards {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .action-card {
                padding: 25px;
            }

            .stats-section {
                flex-direction: column;
                gap: 20px;
                text-align: center;
            }

            .stat-item {

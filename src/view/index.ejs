    <style>
        .main-content {
            min-height: calc(100vh - 64px);
            padding: 0;
        }

        .welcome-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        .hero-section {
            text-align: center;
            margin-bottom: 60px;
        }

        .hero-content {
            margin-bottom: 60px;
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 700;
            color: #ffffff;
            margin-bottom: 20px;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        }

        .hero-subtitle {
            font-size: 1.4rem;
            color: #14a085;
            margin-bottom: 30px;
            font-weight: 500;
        }

        .hero-divider {
            width: 100px;
            height: 4px;
            background: linear-gradient(90deg, #14a085, #0d7377);
            margin: 0 auto 30px auto;
            border-radius: 2px;
        }

        .hero-description {
            font-size: 1.1rem;
            color: #b0b0b0;
            max-width: 600px;
            margin: 0 auto;
            line-height: 1.6;
        }

        .action-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
            margin-bottom: 60px;
        }

        .action-card {
            background-color: #1e1e1e;
            border-radius: 12px;
            padding: 30px;
            text-align: center;
            border: 1px solid #333;
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
            transition: all 0.3s ease;
        }

        .action-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.4);
            border-color: #14a085;
        }

        .card-icon {
            font-size: 3rem;
            margin-bottom: 20px;
        }

        .action-card h3 {
            color: #ffffff;
            font-size: 1.5rem;
            margin-bottom: 15px;
            font-weight: 600;
        }

        .action-card p {
            color: #b0b0b0;
            margin-bottom: 25px;
            line-height: 1.5;
        }

        .card-btn {
            display: inline-block;
            padding: 12px 24px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
            border: 2px solid;
        }

        .card-btn.primary {
            background-color: #0d7377;
            color: white;
            border-color: #0d7377;
        }

        .card-btn.primary:hover {
            background-color: #14a085;
            border-color: #14a085;
            transform: translateY(-2px);
        }

        .card-btn.secondary {
            background-color: transparent;
            color: #14a085;
            border-color: #14a085;
        }

        .card-btn.secondary:hover {
            background-color: #14a085;
            color: white;
        }

        .card-btn.tertiary {
            background-color: transparent;
            color: #ffa726;
            border-color: #ffa726;
        }

        .card-btn.tertiary:hover {
            background-color: #ffa726;
            color: #1e1e1e;
        }

        .stats-section {
            display: flex;
            justify-content: center;
            gap: 40px;
            flex-wrap: wrap;
            padding: 30px;
            background-color: rgba(20, 160, 133, 0.05);
            border-radius: 12px;
            border: 1px solid rgba(20, 160, 133, 0.2);
        }

        .stat-item {
            display: flex;
            align-items: center;
            gap: 15px;
            text-align: left;
        }

        .stat-icon {
            font-size: 2.5rem;
            opacity: 0.8;
        }

        .stat-text {
            display: flex;
            flex-direction: column;
        }

        .stat-number {
            font-size: 2rem;
            font-weight: 700;
            color: #14a085;
        }

        .stat-label {
            font-size: 0.9rem;
            color: #b0b0b0;
            font-weight: 500;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .welcome-container {

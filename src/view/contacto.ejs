        }
        
        .system-features {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }
        
        .feature-item {
            padding: 15px;
            background-color: #2a2a2a;
            border-radius: 8px;
            border: 1px solid #404040;
        }
        
        .feature-item .feature-icon {
            font-size: 1.5rem;
            margin-bottom: 8px;
        }
        
        .feature-item .feature-text {
            font-size: 0.9rem;
            color: #b0b0b0;
        }
        
        .back-to-home {

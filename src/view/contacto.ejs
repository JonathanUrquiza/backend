            margin-top: 40px;
        }
        
        .back-btn {
            display: inline-block;
            padding: 12px 24px;
            background-color: #0d7377;
            color: white;
            text-decoration: none;
            border-radius: 6px;
            font-weight: 600;
            transition: all 0.3s;
            border: 2px solid #0d7377;
        }
        
        .back-btn:hover {
            background-color: #14a085;
            border-color: #14a085;
            transform: translateY(-2px);
        }
        
        @media (max-width: 768px) {
            .contact-content {
                grid-template-columns: 1fr;
                gap: 30px;
            }
            
            .contact-title {
                font-size: 2rem;
            }
            
            .system-features {
                grid-template-columns: 1fr;
            }
            
            .main-content {
                padding: 20px 15px;
            }
        }
    </style>
</head>

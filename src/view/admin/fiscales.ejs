<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= view.title %></title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            color: #e0e0e0;
            min-height: 100vh;
        }

        /* Header Admin */
        .admin-header {
            background: linear-gradient(135deg, #2c3e50, #34495e);
            border-bottom: 3px solid #e74c3c;
            padding: 1rem 2rem;
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
        }

        .admin-header-content {
            max-width: 1400px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .admin-brand {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .admin-logo {
            font-size: 2rem;
            color: #e74c3c;
        }

        .admin-title {
            color: #ffffff;
            font-size: 1.5rem;
            font-weight: 600;
        }

        .admin-nav {
            display: flex;
            gap: 15px;
        }

        .nav-btn {
            padding: 8px 16px;
            background: rgba(231, 76, 60, 0.2);
            color: #e74c3c;
            text-decoration: none;
            border-radius: 6px;
            border: 1px solid rgba(231, 76, 60, 0.3);
            transition: all 0.3s;
        }

        .nav-btn:hover {
            background: #e74c3c;
            color: white;
        }

        /* Main Content */
        .main-content {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        .page-title {
            text-align: center;
            margin-bottom: 2rem;
        }

        .title {
            font-size: 2.5rem;
            color: #ffffff;
            margin-bottom: 10px;
        }

        .subtitle {
            color: #bdc3c7;
            font-size: 1.1rem;
        }

        /* Stats Cards */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            background: linear-gradient(135deg, #2c3e50, #34495e);
            border-radius: 12px;
            padding: 1.5rem;
            text-align: center;
            border-top: 4px solid #e74c3c;
        }

        .stat-number {
            font-size: 2rem;
            font-weight: 700;
            color: #e74c3c;
            margin-bottom: 0.5rem;
        }

        .stat-label {
            color: #bdc3c7;
            font-size: 0.9rem;
        }

        /* Fiscales Table */
        .table-container {
            background: linear-gradient(135deg, #2c3e50, #34495e);
            border-radius: 12px;
            overflow: hidden;
            border-top: 4px solid #e74c3c;
        }

        .table-header {
            padding: 1.5rem;
            border-bottom: 1px solid #444;
        }

        .table-title {
            font-size: 1.3rem;
            color: #ffffff;
            font-weight: 600;
        }

        .fiscales-table {
            width: 100%;
            border-collapse: collapse;
        }

        .fiscales-table th,
        .fiscales-table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #444;
        }

        .fiscales-table th {
            background: rgba(231, 76, 60, 0.1);
            color: #e74c3c;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 1px;
        }

        .fiscales-table tbody tr {
            transition: all 0.3s;
        }

        .fiscales-table tbody tr:hover {
            background: rgba(231, 76, 60, 0.1);
        }

        .type-badge {
            display: inline-block;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        .type-fiscal {
            background: rgba(52, 152, 219, 0.2);
            color: #3498db;
            border: 1px solid rgba(52, 152, 219, 0.3);
        }

        .type-fiscal_general {
            background: rgba(230, 126, 34, 0.2);
            color: #e67e22;
            border: 1px solid rgba(230, 126, 34, 0.3);
        }

        .type-fiscal_zona {
            background: rgba(155, 89, 182, 0.2);
            color: #9b59b6;
            border: 1px solid rgba(155, 89, 182, 0.3);
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 5px;
        }

        .btn {
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 0.8rem;
            font-weight: 500;
            transition: all 0.3s;
        }

        .btn-role {
            background: #f39c12;
            color: white;
        }

        .btn-institution {
            background: #3498db;
            color: white;
        }

        .btn-password {
            background: #95a5a6;
            color: white;
        }

        .btn-delete {
            background: #e74c3c;
            color: white;
        }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.3);
        }

        /* Pagination */
        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 2rem;
            gap: 10px;
        }

        .pagination a,
        .pagination span {
            padding: 8px 16px;
            background: #2c3e50;
            color: #e0e0e0;
            text-decoration: none;
            border-radius: 6px;
            border: 1px solid #444;
        }

        .pagination a:hover {
            background: #e74c3c;
            color: white;
        }

        .pagination .current {
            background: #e74c3c;
            color: white;
        }

        /* Modals */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.8);
        }

        .modal-content {
            background: linear-gradient(135deg, #2c3e50, #34495e);
            margin: 10% auto;
            padding: 2rem;
            border-radius: 12px;
            width: 90%;
            max-width: 500px;
            border-top: 4px solid #e74c3c;
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .modal-title {
            font-size: 1.3rem;
            color: #ffffff;
            font-weight: 600;
        }

        .close {
            background: none;
            border: none;
            font-size: 2rem;
            color: #e74c3c;
            cursor: pointer;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            color: #e0e0e0;
            font-weight: 500;
        }

        .form-input,
        .form-select {
            width: 100%;
            padding: 12px;
            background: #1a1a1a;
            border: 2px solid #444;
            border-radius: 8px;
            color: #ffffff;
            font-size: 16px;
        }

        .form-input:focus,
        .form-select:focus {
            outline: none;
            border-color: #e74c3c;
        }

        .modal-actions {
            display: flex;
            gap: 15px;
            justify-content: flex-end;
        }

        .btn-primary {
            background: #e74c3c;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
        }

        .btn-secondary {
            background: #95a5a6;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .main-content {
                padding: 1rem;
            }
            
            .fiscales-table {
                font-size: 0.8rem;
            }
            
            .action-buttons {
                flex-direction: column;
                gap: 3px;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="admin-header">
        <div class="admin-header-content">
            <div class="admin-brand">
                <div class="admin-logo">üë•</div>
                <div class="admin-title">Gesti√≥n de Fiscales</div>
            </div>
            <nav class="admin-nav">
                <a href="/admin/dashboard" class="nav-btn">üè† Dashboard</a>
                <a href="/admin/logout" class="nav-btn">üö™ Salir</a>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main-content">
        <div class="page-title">
            <h1 class="title">Administrar Fiscales</h1>
            <p class="subtitle">Gestiona roles, instituciones y permisos de todos los fiscales</p>
        </div>

        <!-- Stats -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-number"><%= stats.total %></div>
                <div class="stat-label">Total Fiscales</div>
            </div>
            <div class="stat-card">
                <div class="stat-number"><%= stats.fiscales %></div>
                <div class="stat-label">Fiscales Regulares</div>
            </div>
            <div class="stat-card">
                <div class="stat-number"><%= stats.fiscalesGenerales %></div>
                <div class="stat-label">Fiscales Generales</div>
            </div>
            <div class="stat-card">
                <div class="stat-number"><%= stats.fiscalesZona %></div>
                <div class="stat-label">Fiscales de Zona</div>
            </div>
        </div>

        <!-- Table -->
        <div class="table-container">
            <div class="table-header">
                <h2 class="table-title">Lista de Fiscales</h2>
            </div>
            
            <table class="fiscales-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Tipo</th>
                        <th>Zona</th>
                        <th>Instituci√≥n</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% fiscales.forEach(fiscal => { %>
                    <tr>
                        <td><%= fiscal.id %></td>
                        <td><%= fiscal.nombre %></td>
                        <td><%= fiscal.email %></td>
                        <td>
                            <span class="type-badge type-<%= fiscal.tipo %>">
                                <%= fiscal.tipo.replace('_', ' ') %>
                            </span>
                        </td>
                        <td><%= fiscal.zona || 'N/A' %></td>
                        <td><%= fiscal.institucion || 'Sin Asignar' %></td>
                        <td>
                            <div class="action-buttons">
                                <button class="btn btn-role" onclick="showRoleModal(<%= fiscal.id %>, '<%= fiscal.nombre %>', '<%= fiscal.tipo %>')">
                                    üé≠ Rol
                                </button>
                                <button class="btn btn-institution" onclick="showInstitutionModal(<%= fiscal.id %>, '<%= fiscal.nombre %>', '<%= fiscal.institucion %>')">
                                    üè¢ Instituci√≥n
                                </button>
                                <button class="btn btn-password" onclick="showPasswordModal(<%= fiscal.id %>, '<%= fiscal.nombre %>')">
                                    üîê Password
                                </button>
                                <button class="btn btn-delete" onclick="showDeleteModal(<%= fiscal.id %>, '<%= fiscal.nombre %>', '<%= fiscal.tipo %>')">
                                    üóëÔ∏è Eliminar
                                </button>
                            </div>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="pagination">
            <% if (pagination.hasPrev) { %>
                <a href="?page=<%= pagination.prevPage %>">&laquo; Anterior</a>
            <% } %>
            
            <span class="current">P√°gina <%= pagination.currentPage %> de <%= pagination.totalPages %></span>
            
            <% if (pagination.hasNext) { %>
                <a href="?page=<%= pagination.nextPage %>">Siguiente &raquo;</a>
            <% } %>
        </div>
    </main>

    <!-- Modal para cambiar rol -->
    <div id="roleModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Cambiar Rol de Fiscal</h3>
                <button class="close" onclick="closeModal('roleModal')">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="form-label">Fiscal:</label>
                    <input type="text" id="roleModalFiscalName" class="form-input" readonly>
                </div>
                <div class="form-group">
                    <label for="newRole" class="form-label">Nuevo Rol:</label>
                    <select id="newRole" class="form-select">
                        <option value="fiscal">Fiscal Regular</option>
                        <option value="fiscal_general">Fiscal General</option>
                        <option value="fiscal_zona">Fiscal de Zona</option>
                    </select>
                </div>
            </div>
            <div class="modal-actions">
                <button class="btn-secondary" onclick="closeModal('roleModal')">Cancelar</button>
                <button class="btn-primary" onclick="updateRole()">Actualizar Rol</button>
            </div>
        </div>
    </div>

    <!-- Modal para cambiar instituci√≥n -->
    <div id="institutionModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Cambiar Instituci√≥n</h3>
                <button class="close" onclick="closeModal('institutionModal')">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="form-label">Fiscal:</label>
                    <input type="text" id="institutionModalFiscalName" class="form-input" readonly>
                </div>
                <div class="form-group">
                    <label for="newInstitution" class="form-label">Nueva Instituci√≥n:</label>
                    <input type="text" id="newInstitution" class="form-input" placeholder="Nombre de la instituci√≥n">
                </div>
            </div>
            <div class="modal-actions">
                <button class="btn-secondary" onclick="closeModal('institutionModal')">Cancelar</button>
                <button class="btn-primary" onclick="updateInstitution()">Actualizar Instituci√≥n</button>
            </div>
        </div>
    </div>

    <!-- Modal para cambiar contrase√±a -->
    <div id="passwordModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Cambiar Contrase√±a</h3>
                <button class="close" onclick="closeModal('passwordModal')">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="form-label">Fiscal:</label>
                    <input type="text" id="passwordModalFiscalName" class="form-input" readonly>
                </div>
                <div class="form-group">
                    <label for="newPassword" class="form-label">Nueva Contrase√±a:</label>
                    <input type="password" id="newPassword" class="form-input" placeholder="M√≠nimo 6 caracteres">
                </div>
            </div>
            <div class="modal-actions">
                <button class="btn-secondary" onclick="closeModal('passwordModal')">Cancelar</button>
                <button class="btn-primary" onclick="updatePassword()">Actualizar Contrase√±a</button>
            </div>
        </div>
    </div>

    <!-- Modal para confirmar eliminaci√≥n -->
    <div id="deleteModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">‚ö†Ô∏è Confirmar Eliminaci√≥n</h3>
                <button class="close" onclick="closeModal('deleteModal')">&times;</button>
            </div>
            <div class="modal-body">
                <p>¬øEst√°s seguro de que deseas eliminar al siguiente fiscal?</p>
                <div class="form-group">
                    <label class="form-label">Fiscal:</label>
                    <input type="text" id="deleteModalFiscalName" class="form-input" readonly>
                </div>
                <p style="color: #e74c3c; font-weight: bold;">Esta acci√≥n NO se puede deshacer.</p>
            </div>
            <div class="modal-actions">
                <button class="btn-secondary" onclick="closeModal('deleteModal')">Cancelar</button>
                <button class="btn-primary" onclick="deleteFiscal()" style="background: #c0392b;">Eliminar</button>
            </div>
        </div>
    </div>

    <script>
        let currentFiscalId = null;

        // Funciones para mostrar modales
        function showRoleModal(fiscalId, fiscalName, currentType) {
            currentFiscalId = fiscalId;
            document.getElementById('roleModalFiscalName').value = fiscalName;
            document.getElementById('newRole').value = currentType;
            document.getElementById('roleModal').style.display = 'block';
        }

        function showInstitutionModal(fiscalId, fiscalName, currentInstitution) {
            currentFiscalId = fiscalId;
            document.getElementById('institutionModalFiscalName').value = fiscalName;
            document.getElementById('newInstitution').value = currentInstitution || '';
            document.getElementById('institutionModal').style.display = 'block';
        }

        function showPasswordModal(fiscalId, fiscalName) {
            currentFiscalId = fiscalId;
            document.getElementById('passwordModalFiscalName').value = fiscalName;
            document.getElementById('newPassword').value = '';
            document.getElementById('passwordModal').style.display = 'block';
        }

        function showDeleteModal(fiscalId, fiscalName, fiscalType) {
            currentFiscalId = fiscalId;
            document.getElementById('deleteModalFiscalName').value = `${fiscalName} (${fiscalType.replace('_', ' ')})`;
            document.getElementById('deleteModal').style.display = 'block';
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
            currentFiscalId = null;
        }

        // Funciones para actualizar datos
        async function updateRole() {
            const newRole = document.getElementById('newRole').value;
            
            try {
                const response = await fetch('/admin/fiscales/assign-role', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        fiscalId: currentFiscalId,
                        nuevoTipo: newRole
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert(result.message);
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                alert('Error de conexi√≥n');
            }
            
            closeModal('roleModal');
        }

        async function updateInstitution() {
            const newInstitution = document.getElementById('newInstitution').value.trim();
            
            if (!newInstitution) {
                alert('Por favor ingresa una instituci√≥n');
                return;
            }
            
            try {
                const response = await fetch('/admin/fiscales/change-institution', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        fiscalId: currentFiscalId,
                        nuevaInstitucion: newInstitution
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert(result.message);
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                alert('Error de conexi√≥n');
            }
            
            closeModal('institutionModal');
        }

        async function updatePassword() {
            const newPassword = document.getElementById('newPassword').value;
            
            if (!newPassword || newPassword.length < 6) {
                alert('La contrase√±a debe tener al menos 6 caracteres');
                return;
            }
            
            try {
                const response = await fetch('/admin/fiscales/change-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        fiscalId: currentFiscalId,
                        nuevaPassword: newPassword
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert(result.message);
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                alert('Error de conexi√≥n');
            }
            
            closeModal('passwordModal');
        }

        async function deleteFiscal() {
            try {
                const response = await fetch('/admin/fiscales/delete', {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        fiscalId: currentFiscalId
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert(result.message);
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                alert('Error de conexi√≥n');
            }
            
            closeModal('deleteModal');
        }

        // Cerrar modal al hacer clic fuera
        window.onclick = function(event) {
            const modals = document.querySelectorAll('.modal');
            modals.forEach(modal => {
                if (event.target == modal) {
                    modal.style.display = 'none';
                    currentFiscalId = null;
                }
            });
        }
    </script>
</body>
</html>
